<!DOCTYPE html>
<html lang="en">
  <head>
    <title>政大即食通</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>



    <script src="/socket.io/socket.io.js"></script>
    <script>
      $(document).ready(function() {
        updateOrder('<%= typename %>', '<%= cust %>', Padding);
      });
      const Webtype = 'customer'; 
    </script>

    <script src="/javascripts/receive.js"></script>


  </head>
  <body>
    <nav class="navbar fixed-top navbar-expand-lg navbar navbar-dark bg-dark">
      <a class="navbar-brand" href="/">政大即食通</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/features">Features</a>
          </li>
          <li class="nav-item active dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Orders<span class="sr-only">(current)</span></a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <a class="dropdown-item" href="/history">History</a>
              <a class="dropdown-item" href="/customer">Customer<span class="sr-only">(current)</span></a>
              <a class="dropdown-item" href="/restaurant">Restaurant</a>
            </div>
          </li>
          <li class="nav-itemk">
            <a class="nav-link" href="/chaininfo">ChainInfo</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-3">
      <br><br>
      <div class="row">
        <div class="col">
          <div class="dropdown" style="float: left;">
            <button id="ordername" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><%= cust %></button>
            <div id='upload-shops' class="dropdown-menu">
              <% for(var i = 0; i < custs.length; i++){ %>
              <a class="dropdown-item" href="/customer/<%= custs[i] %>" ><%= custs[i] %></a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <br>
      <ul id='ordertype' class="nav nav-tabs nav-justified">
        <li class="nav-item">
          <a onclick="updateOrder('<%= typename %>', '<%= cust %>', Padding)" class="nav-link active" data-toggle="tab" href="#padding">Padding</a>
        </li>
        <li class="nav-item">
          <a onclick="updateOrder('<%= typename %>', '<%= cust %>', Accepted)" class="nav-link" data-toggle="tab" href="#accepted">Accepted</a>
        </li>

        <li class="nav-item">
          <a onclick="updateOrder('<%= typename %>', '<%= cust %>', Finished)" class="nav-link" data-toggle="tab" href="#finished">Finished</a>
        </li>
        <li class="nav-item">
          <a onclick="updateOrder('<%= typename %>', '<%= cust %>', Canceled)" class="nav-link" data-toggle="tab" href="#canceled">Canceled</a>
        </li>
      </ul>

      <br><br>

      <div class="tab-content">
        <div id="padding" class="container tab-pane active"><br>
          <div id="padding-accordion">
          </div>
        </div>
        <div id="accepted" class="container tab-pane fade"><br>
          <div id="accepted-accordion">
          </div>
        </div>
        <div id="finished" class="container tab-pane fade"><br>
          <div id="finished-accordion">
          </div>
        </div>
        <div id="canceled" class="container tab-pane fade"><br>
          <div id="canceled-accordion">
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
